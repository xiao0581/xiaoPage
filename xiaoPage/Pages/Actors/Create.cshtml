@page
@model xiaoPage.Pages.Actors.CreateModel
<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="actor.Name" class="p-0"></label>
            <input asp-for="actor.Name" class="form-control" />
            <span asp-validation-for="actor.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="actor.Birthday" class="p-0"></label>
            <input asp-for="actor.Birthday" class="form-control" />
            <span asp-validation-for="actor.Birthday" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Actors/index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
